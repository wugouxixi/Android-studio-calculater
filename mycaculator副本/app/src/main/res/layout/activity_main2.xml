<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.roony.mycalculator.MainActivity">

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_row="0"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rsText"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="#FFF68F"
            android:gravity="center_vertical|right"
            android:text=""
            android:textColor="#9A32CD"
            android:textSize="40dp" />

        <Button
            android:id="@+id/Buttonback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="?attr/colorButtonNormal"
            android:text="←"
            android:textSize="40dp" />


    </LinearLayout>

    <!--7 8 9 + -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="9"
            android:textSize="30dp" />
        <Button
            android:id="@+id/ButtonCF"
            android:text="CF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="#B0C4DE"
            android:textSize="30dp"/>


    </LinearLayout>

    <!-- 4 5 6 - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="4"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="5"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="6"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Buttonhelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="#B0C4DE"
            android:text="help"
            android:textSize="30dp" />


    </LinearLayout>
    <!-- 1 2 3 * -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="3"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Buttonesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="#B0C4DE"
            android:text="esc"
            android:textSize="30dp" />


    </LinearLayout>
    <!-- 0 C = / -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="0"
            android:textSize="30dp" />

        <Button
            android:id="@+id/ButtonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="#B0C4DE"
            android:text="C"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Buttonzhuan2"
            android:text="二"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="#B0C4DE" />
        <Button
            android:id="@+id/Buttonzhuan8"
            android:text="八"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="#B0C4DE" />

    </LinearLayout>

    <!-- . menu help esc -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Buttonsin"
            android:text="sin"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="?attr/colorButtonNormal" />

        <Button
            android:id="@+id/Buttoncos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="?attr/colorButtonNormal"
            android:text="cos"
            android:textSize="30dp" />

        <Button
            android:id="@+id/Buttonsqrt"
            android:text="sqrt"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="?attr/colorButtonNormal"
            android:layout_below="@+id/rsText" />
        <Button
            android:id="@+id/Buttongoback"
            android:text="back"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="?attr/colorButtonNormal" />

    </LinearLayout>

</LinearLayout>